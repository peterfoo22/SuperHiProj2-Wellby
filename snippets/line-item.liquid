<div class="line-item">
  <div class="line-info">
    <a class = "line-title" href="{{ item.url }}">
      <span class = "h3">{{ item.product.title }} </span>
      <span class = "accent-color">x{{ item.quantity }}</span>
    </a>
    <p>
      {{ item.variant.title }} &ndash;
      {% if item.quantity > 1 %} {{ item.price | money_without_trailing_zeros }}//ea {% endif %}
    </p>

  </div>

  <div class="line-image">
    <a href="{{ item.url | within: collections.all }}">
      <img src="{{ item | img_url: '200x200', crop: 'center' }}" alt="{{ item.title | escape }}">
    </a>

    <a class = "remove-line js-remove-line" href="/cart/change?line={{forloop.index}}&quantity=0">
      <img src="{{ 'x-remove.svg' | asset_url }}" class = "remove-line" alt="Remove">
    </a>


  </div>
</div>


